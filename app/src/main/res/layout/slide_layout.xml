<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/slide_image"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:srcCompat="@drawable/logo1"/>

    <ImageView
        android:id="@+id/slide_heading"
        android:paddingLeft="15dp"
        android:layout_width="251dp"
        android:layout_height="80dp"
        android:layout_below="@id/slide_image"
        android:layout_marginTop="-54dp"
        app:srcCompat="@drawable/healthtrip_black" />

    <TextView
        android:id="@+id/slide_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="We are here to assist you, locating nearby health services"
        android:layout_below="@id/slide_heading"
        android:layout_centerHorizontal="true"
        android:textSize="25dp"
        android:padding="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textColor="#000000"
        android:fontFamily="sans-serif-medium"/>
</RelativeLayout>